<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <!-- Robot Dimensions -->
    <xacro:property name="robot_length" value="0.18"/>  <!-- 18 cm -->
    <xacro:property name="robot_width" value="0.12"/>   <!-- 12 cm -->
    <xacro:property name="wheel_separation" value="0.13"/>  <!-- 13 cm -->
    <xacro:property name="wheel_radius" value="0.022"/>     <!-- 44mm diameter -->
    <xacro:property name="wheel_width" value="0.018"/>      <!-- 18mm -->

    <!-- Masses -->
    <xacro:property name="base_mass" value="1.0"/>
    <xacro:property name="wheel_mass" value="0.1"/>
    <xacro:property name="caster_mass" value="0.05"/>

    <!-- Inertia Properties -->
    <xacro:property name="base_inertia_x" value="0.01"/>
    <xacro:property name="base_inertia_y" value="0.01"/>
    <xacro:property name="base_inertia_z" value="0.01"/>
    
    <xacro:property name="wheel_inertia_x" value="0.001"/>
    <xacro:property name="wheel_inertia_y" value="0.001"/>
    <xacro:property name="wheel_inertia_z" value="0.001"/>
    
    <xacro:property name="caster_inertia" value="0.001"/>
</robot>